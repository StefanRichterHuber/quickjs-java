<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.github.stefanrichterhuber</groupId>
  <artifactId>quickjs-java</artifactId>
  <version>1.0-SNAPSHOT</version>

  <name>quickjs-java</name>
  <url>https://github.com/StefanRichterHuber/quickjs-java</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>21</maven.compiler.source>
    <maven.compiler.target>21</maven.compiler.target>
    <!-- If true, build rust library as release build. Use mvn -Drust.release=false clean install to
    build faster during development-->
    <rust.release>true</rust.release>
  </properties>

  <dependencies>
    <!-- To locate platform specific library -->
    <dependency>
      <groupId>org.questdb</groupId>
      <artifactId>jar-jni</artifactId>
      <version>1.1.1</version>
    </dependency>
    <!-- Logging facade -->
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-api</artifactId>
      <version>2.23.0</version>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.10.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-core</artifactId>
      <version>2.23.0</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <phase>compile</phase>
          <compilerArgs>
            <arg>-h</arg>
            <arg>target/headers</arg>
          </compilerArgs>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.2.5</version>
      </plugin>
      <plugin>
        <groupId>org.questdb</groupId>
        <artifactId>rust-maven-plugin</artifactId>
        <version>1.1.1</version>
        <executions>
          <execution>
            <id>rust-build-x64</id>
            <phase>compile</phase>
            <goals>
              <goal>build</goal>
            </goals>
            <configuration>
              <path>src/main/rust/quickjslib</path>
              <copyTo>
                src/main/resources/libs</copyTo>
              <copyWithPlatformDir>true</copyWithPlatformDir>
              <release>${rust.release}</release>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>